<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/container">

    <include layout="@layout/module_include_gray_space" />

    <RelativeLayout
        style="@style/PaddinLeftRight"
        android:layout_width="match_parent"
        android:layout_height="100px">

        <ImageView
            android:id="@+id/img_other_avatar"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            android:src="@mipmap/head" />

        <TextView
            android:id="@+id/tv_other_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17px"
            android:layout_toRightOf="@+id/img_other_avatar"
            android:text="用户名"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_createtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/text_gray"
            android:textSize="12sp"
            android:text="2019-01-11"/>



    </RelativeLayout>

    <include layout="@layout/module_include_divider" />

    <RelativeLayout
        style="@style/PaddinLeftRight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="40px">

        <TextView
            android:id="@+id/tv_my_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买"
            android:textColor="@color/primary_red"
            android:textSize="14sp"
            android:layout_marginRight="10px"/>

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_my_action"
            android:layout_toRightOf="@+id/tv_my_action"
            android:text="300.00T"
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="进行中"
            android:textColor="@color/text_black"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@+id/tv_total_"/>

        <TextView
            android:id="@+id/tv_rmb_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_my_action"
            android:layout_marginTop="30px"
            android:paddingBottom="40px"
            android:text="交易金额： "
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_rmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_rmb_txt"
            android:layout_toRightOf="@+id/tv_rmb_txt"
            android:text="1.00元"
            android:textColor="@color/text_black"
            android:textSize="14sp" />

    </RelativeLayout>


</LinearLayout>
