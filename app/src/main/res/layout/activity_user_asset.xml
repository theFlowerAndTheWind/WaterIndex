<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/module_include_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/PaddinLeftRight"
        android:paddingTop="40px"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="40px"
            android:layout_marginTop="40px"
            android:orientation="vertical"
            android:background="@drawable/gray_bg_shape">

            <LinearLayout
                android:layout_above="@+id/tv_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="节水指标账户"
                    android:textColor="@color/text_black"
                    android:textSize="32px"/>
                <TextView
                    android:id="@+id/total_all_monery_c2c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="25px"
                    style="@style/style_txt_content"
                    android:text="总资产折合：2497.45 JSL ≈ 10492.35 T"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/tv_ll"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_jsl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/style_txt_content_gray"
                        android:text="可用：1997.45"/>
                    <TextView
                        android:id="@+id/tv_jsl_freeze"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18px"
                        style="@style/style_txt_content_gray"
                        android:text="冻结：1997.45"/>
                    <!--<TextView-->
                        <!--android:id="@+id/tv_jsl_gyj"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginTop="18px"-->
                        <!--style="@style/style_txt_content_gray"-->
                        <!--android:text="公益金：1997.45"-->
                        <!--android:visibility="gone"/>-->

                </LinearLayout>

                <Button
                    android:id="@+id/btn_c2c_transfer"
                    android:layout_width="200px"
                    android:layout_height="70px"
                    android:textSize="28px"
                    android:textColor="@android:color/white"
                    style="@style/style_btn"
                    android:text="划转"/>
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="40px"
            android:layout_marginTop="40px"
            android:orientation="vertical"
            android:background="@drawable/gray_bg_shape">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数字节水账户"
                    android:textColor="@color/text_black"
                    android:textSize="32px"/>
                <TextView
                    android:id="@+id/total_all_monery_bb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="25px"
                    style="@style/style_txt_content"
                    android:text="总资产折合：2497.45 JSL ≈ 10492.35 T"/>

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_ds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/style_txt_content_gray"
                        android:text="可用：1997.45"/>
                    <TextView
                        android:id="@+id/tv_ds_freeze"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18px"
                        style="@style/style_txt_content_gray"
                        android:text="冻结：1997.45"/>

                    <!--<TextView-->
                        <!--android:id="@+id/tv_ds_transfer"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginTop="18px"-->
                        <!--style="@style/style_txt_content_gray"-->
                        <!--android:text="公益金：1997.45"-->
                        <!--android:visibility="gone"/>-->

                </LinearLayout>

                <Button
                    android:id="@+id/btn_jsl_transfer"
                    android:layout_width="200px"
                    android:layout_height="70px"
                    android:textSize="28px"
                    android:textColor="@android:color/white"
                    style="@style/style_btn"
                    android:text="划转"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
