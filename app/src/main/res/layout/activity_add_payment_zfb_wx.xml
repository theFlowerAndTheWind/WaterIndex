<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/module_include_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="40px"
        android:paddingVertical="30px"
        android:orientation="vertical"
        android:layout_marginBottom="30px">
        <LinearLayout
            android:id="@+id/ll_upload_qrcode"
            android:layout_width="match_parent"
            android:layout_height="250px"
            android:orientation="vertical"
            android:background="@drawable/gray_border_bg_shape"
            android:gravity="center">
            <ImageView
                android:id="@+id/img_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/add"
                />
            <TextView
                android:id="@+id/tv_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="30px"
                android:gravity="center"
                android:textColor="@color/hit_color"/>
        </LinearLayout>
        <!--<Button-->
            <!--android:id="@+id/btn_payment_qrcode_img"-->
            <!--style="@style/btn_upload"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="250px"-->
            <!--android:layout_marginBottom="30px" />-->

        <EditText
            android:id="@+id/edt_payment_name"
            style="@style/style_edt"
            android:layout_marginBottom="30px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_input_payment_name" />

        <EditText
            android:id="@+id/edt_payment_comment_account"
            style="@style/style_edt"
            android:layout_marginBottom="30px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edt_capital_pass"
            style="@style/style_edt"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_input_payment_capital_pass" />
        <Button
            android:id="@+id/btn_confirm"
            style="@style/style_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_agreement"
            android:layout_marginTop="@dimen/view_space_bottom_btn_above"
            android:background="@drawable/btn_yellow_bg_selector"
            android:text="完成" />

    </LinearLayout>


</LinearLayout>

